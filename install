echo 'installing dotfiles, etc...'

BASEDIR=$(dirname "$0")

# BASH PROFILE
if [ -e ~/.bash_profile ]
then
  rm ~/.bash_profile
fi

ln -s "${BASEDIR}/bash_profile" ~/.bash_profile


# VIM FOLDER
if [ -e ~/.vim ]
then
  rm ~/.vim
fi

ln -s "${BASEDIR}/vim" ~/.vim


# VIMRC
if [ -e ~/.vimrc ]
then
  rm ~/.vimrc
fi

ln -s "${BASEDIR}/vim/vimrc" ~/.vimrc

cd ${BASEDIR} && git submodule update --init
